<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/desc_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@+id/desc_title"
        android:contentDescription="@string/desc"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/desc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingTop="12dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_title"
        android:paddingLeft="50dp"
        android:paddingRight="80dp"
        android:paddingTop="20dp"
        android:textSize="17sp"
        android:gravity="fill_horizontal"/>

    <ImageView
        android:id="@+id/smoking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/sundays"
        android:contentDescription="@string/desc"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/description_smoking" />

    <ImageView
        android:id="@+id/sundays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/wifi"
        android:contentDescription="@string/desc"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/description_sunday" />

    <ImageView
        android:id="@+id/wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/desc"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/description_wifi" />

</RelativeLayout>